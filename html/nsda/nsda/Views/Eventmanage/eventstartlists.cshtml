@{
    Layout = "~/Views/Shared/_EventManage.cshtml";
    ViewBag.Title = "发起赛事";
}

<link href="@Url.Content("~/Content/asset/css/common.css?1.1.0")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/asset/css/eventstartlists.css?3.1.0")" rel="stylesheet" type="text/css" />

<div class="container-fulid event-select eventstarlists">
    <div class="form-group container compename">
        <label for="inputName">本次赛事名称：</label>
        <div>
            <input type="text" id="inputName" placeholder="赛事中文名称">
            <input type="text" id="inputEnName" placeholder="English name of the tournament">
        </div>
    </div>
    <div class="form-group container competime">
        <label for="compedate">添加比赛日期：</label>
        <div class="adddate">
            <input type="text" class="compedate" id="compedate" placeholder="选择比赛日期" readonly="readonly">
            <i class="iconfont icon-close-b delinput"></i>
        </div>
        
        <i class="iconfont icon-jiahao addinput"></i>
    </div>
    <div class="form-group container compedeadtime">
        <label for="deadlinedate">报名截止日期：</label>
        <div>
            <input type="text" id="deadlinedate" placeholder="选择报名截止日期" readonly="readonly">
        </div>
    </div>
    <div class="form-group container compeaddress">
        <label>赛场地址：</label>
        <div>
            <select>
                <option>省</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
            <select>
                <option>市</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
            <input type="text" placeholder="输入赛场地址">
        </div>
    </div>
    <div class="form-group container compedetail">
        <label>赛事描述：</label>
        <div>
            <textarea rows="3"></textarea>
        </div>
    </div>
    <div class="form-group container compecost">
        <label>参赛报名费用（人/元）:</label>
        <div>
            <input type="number" placeholder="￥">
        </div>
    </div>
    <div class="form-group container comperetime">
        <label>退费截止日期：</label>
        <div>
            <input type="text" id="refunddate" placeholder="选择退费截止日期" readonly="readonly">
        </div>
    </div>
    <div class="form-group container compenumber">
        <label>报名人数上限:</label>
        <div>
            <input type="number" placeholder="输入人数">人 
        </div>
    </div>
    <div class="container-fulid teambg">
        <div class="container">
            <h3>组别设置</h3>
            <a href="javascript:;" class="addteam blue color-white">+添加组别</a>
        </div>
        <div class="tbg">
            <div class="container">
                <div class="teamlist radius5">
                    <div class="form-group groupname">
                        <input type="text" placeholder="输入组别名称">
                    </div>
                    <div class="form-group grade">
                        <label>年级段设置:</label>
                        <div>
                            <select>
                                <option>不限</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                            <p>到</p>
                            <select>
                                <option>不限</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group allnum">
                        <label>累计比赛次数设置 （如不填写，则为不限）:</label>
                        <div>
                            <input type="number" placeholder="填写参赛次数">
                            <p>到</p>
                            <input type="number" placeholder="填写参赛次数">
                        </div>
                    </div>
                    <a href="javascript:;" class="delteam red radius5 color-white">删除</a>
                </div>
                <div class="teamlist radius5">
                    <div class="form-group groupname">
                        <input type="text" placeholder="输入组别名称">
                    </div>
                    <div class="form-group grade">
                        <label>年级段设置:</label>
                        <div>
                            <select>
                                <option>不限</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                            <p>到</p>
                            <select>
                                <option>不限</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group allnum">
                        <label>累计比赛次数设置 （如不填写，则为不限）:</label>
                        <div>
                            <input type="number" placeholder="填写参赛次数">
                            <p>到</p>
                            <input type="number" placeholder="填写参赛次数">
                        </div>
                    </div>
                    <a href="javascript:;" class="delteam red radius5 color-white">删除</a>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="color-white darkblue radius5">递交发布赛事申请</button>
</div>
<script>
    laydate.render({
        elem: '.compedate',
        showBottom: false
    });
    laydate.render({
        elem: '#deadlinedate',
        showBottom: false
    });
    laydate.render({
        elem: '#refunddate',
        showBottom: false
    });
</script>



















