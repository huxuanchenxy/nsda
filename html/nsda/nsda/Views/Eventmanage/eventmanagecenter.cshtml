@{
    Layout = "~/Views/Shared/_EventManage.cshtml";
    ViewBag.Title = "赛事管理员中心";
}

<link href="@Url.Content("~/Content/asset/css/common.css?1.1.0")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/asset/css/eventmanagecenter.css?2.1.0")" rel="stylesheet" type="text/css" />

<div class="container regform-con">
    <div class="reg-sign">
        <div class="form-ctrl">
            <div class="form-group">
                <label for="email" class="form-label">注册邮箱</label>
                <input type="email" class="form-input radius5 color-79" id="email">
            </div>
            <div class="form-group">
                <div class="form-group-small">
                    <label for="lastname" class="form-label">姓</label>
                    <input type="text" class="form-input radius5 color-79" id="lastname">
                </div>
                <div class="form-group-small">
                    <label for="firstname" class="form-label">名</label>
                    <input type="text" class="form-input radius5 color-79" id="firstname">
                </div>
            </div>
            <div class="form-group">
                <div class="form-group-small">
                    <label for="pylastname" class="form-label">拼音姓</label>
                    <input type="text" class="form-input radius5 color-79" id="pylastname">
                </div>
                <div class="form-group-small">
                    <label for="pyfirstname" class="form-label">拼音名</label>
                    <input type="text" class="form-input radius5 color-79" id="pyfirstname">
                </div>
            </div>
            <div class="form-group">
                <label for="telephone" class="form-label">联系电话</label>
                <input type="text" class="form-input-phone radius5 color-79" id="telephone">
            </div>
            <div class="form-group">
                <div class="form-group-small">
                    <label for="urgentbody" class="form-label">紧急联系人</label>
                    <input type="text" class="form-input radius5 color-79" id="urgentbody">
                </div>
                <div class="form-group-small">
                    <label for="urgentphone" class="form-label">紧急电话</label>
                    <input type="text" class="form-input radius5 color-79" id="urgentphone">
                </div>
            </div>
            <div class="form-group form-sexy">
                <label for="sex" class="form-label">性别</label>
                <label class="radio-inline sexy">
                    <input type="radio" name="inlineRadioOptions" id="men" value="option1"> 男
                </label>
                <label class="radio-inline sexy">
                    <input type="radio" name="inlineRadioOptions" id="women" value="option2"> 女
                </label>
            </div>
            <div class="form-group">
                <label for="address" class="form-label">通讯地址</label>
                <input type="text" class="form-input radius5 color-79" id="address">
            </div>
            <div class="form-group">
                <label for="idcard" class="form-label">有效证件</label>
                <select class="form-select-card radius5 color-79" id="card">
                    <option>身份证</option>
                    <option>护照</option>
                    <option>港澳台通行证</option>
                </select>
                <input type="text" class="form-input-card radius5" id="idcard">
            </div>
            <button type="submit" class="button radius5 color-white darkblue">保存修改</button>
        </div>
        <div class="modifypassword">
            <img src="~/Content/asset/img/password_03.png" alt="" />
            <div class="modifypanel">
                <input type="password" class="radius5" placeholder="输入新密码">
                <input type="password" class="radius5" placeholder="再次输入新密码">
                <input type="button" value="确认新密码" class="confirmnewpassword radius5 color-white darkblue">
            </div>
        </div>
    </div>
</div>

<script>
    laydate.render({
        elem: '#startyear'
        , type: 'month'
    });
    laydate.render({
        elem: '#endyear'
        , type: 'month'
    });
</script>














