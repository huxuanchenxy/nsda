        </div>
        <button class="confirmset">确认保存循环赛设置</button>
    </div>
</div>

@Scripts.Render("~/Content/asset/js/laydate/laydate.js")
<script>
                
    lay('.settime').each(function () {
        laydate.render({
            elem: this,
            type: 'datetime',
            trigger: 'click'
        });
    });
</script>


















