@{
    Layout = "";
    ViewBag.Title = "添加教育经历";
}
<link href="@Url.Content("~/Content/asset/css/Playerpersonal.css?1.1.4")" rel="stylesheet" type="text/css" />


<div class="addeducation" id="addeducation">
    <div class="form-group">
        <input class="form-select-school" id="staryear" readonly="readonly">
        <em class="em"> —</em>
        <input class="form-select-school" id="endyear" readonly="readonly">
        <select class="form-select-schools" id="province">
            <option>省</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
        <select class="form-select-schools" id="city">
            <option>市</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
        <select class="form-select-schoolads" id="school">
            <option>学校</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </div>
    <button class="confirmadd" id="confirmadd">添加</button>
</div>

@Scripts.Render("~/Content/asset/js/laydate/laydate.js")
<script>
    laydate.render({
        elem: '#staryear',
        type:'month'
    });
    laydate.render({
        elem: '#endyear',
        type: 'month'
    });
</script>
