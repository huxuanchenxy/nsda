                    <a href="" id="check"><span class="iconfont icon-sousuo" aria-hidden="true"></span></a>
                    <input type="text" class="form-control" name="" placeholder="">
                </div>
            </div>
        </div>
    </nav>

    <header>
        <nav class="navbar navbar-default header container" role="navigation">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse"
                        data-target="#example-navbar-collapse">

                    <span class="sr-only">切换导航</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"></a>

            </div>
            <div class="collapse navbar-collapse" id="example-navbar-collapse">
                <ul class="nav navbar-nav drop-list" id="lead">
                    <li class=""><a href="/">首页</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            关于我们
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/about/nsda">关于NSDA</a></li>
                            <li><a href="/about/nsda">NSDA中国</a></li>
                            <li><a href="/about/partner">"合作伙伴</a></li>
                            <li><a href="/about/us">联系我们</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            会员系统
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">会员系统</a></li>
                            <li><a href="#">裁判招募</a></li>
                            <li><a href="#">申请赛事管理员</a></li>
                            <li><a href="#">排名榜单</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            赛事
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">赛历</a></li>
                            <li><a href="#">国内赛事</a></li>
                            <li><a href="#">国际赛事</a></li>
                        </ul>
                    </li>
                    <li class=""><a href="#">课程专栏</a></li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            更多
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">辩题</a></li>
                            <li><a href="#">教材购买</a></li>
                        </ul>
                    </li>
                </ul>


                <div class="sear hidden-sm hidden-md hidden-lg">
                    <input type="text" class="form-control" name="" placeholder="">
                    <a href="" class="check2"><span class="iconfont icon-sousuo" aria-hidden="true"></span></a>
                    <span class="iconfont icon-yonghu" aria-hidden="true"></span>
                    <a href="#" class="navbar-link link">注册 | </a><a href="#" class="navbar-link link">&nbsp;登录 </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="mec-ban">
        <div class="container player">
            <div class="player-info">
                <div class="img">
                    @if (userContext.Head.IsNotEmpty())
                    {
                        <img id="uploadPreview" src="@userContext.Head" />
                    }
                    else
                    {
                        <img id="uploadPreview" src="/asset/img/teacher.png" />
                    }
                    <input type="file" title="点击更换头像" name="uploadFile" id="uploadFile" accept="image/gif,image/jpeg,image/jpg,image/png">
                </div>
                <div class="player-num">
                    <ul>
                        <li><span>NSDA CHINA 注册会员：</span><p>@userContext.Name</p></li>
                        <li><span>目前 NSDA 积分：</span><p>@userContext.PlayerPoints</p></li>
                        <li><span>NSDA 会员编号：</span><p>@userContext.Code</p></li>
                    </ul>
                </div>
                <a href="#" class="player-code">
                    <i class="iconfont icon-erweima"></i>
                    我的二维码
                </a>
            </div>
        </div>
    </div>

    <div class="container player-compe">
        <div class="info-lists">
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                <div class="panel panel-default">
                    <a href="/player/player"><h3 class="mc">会员中心</h3></a>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingOne">
                        <h4 class="panel-title">
                            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                <p>My tournaments</p>
                                <h3>我的比赛&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;v</h3>
                            </a>
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                        <div class="panel-body">
                            <ul>
                                <a href="/player/playersignup/index" class="compe"><li>比赛报名</li></a>
                                <a href="/player/playersignup/list" class="compe"><li>已参与比赛</li></a>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingTwo">
                        <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                <p>Personal information</p>
                                <h3>会员信息&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;v</h3>
                            </a>
                        </h4>
                    </div>
                    <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                        <div class="panel-body">
                            <ul>
                                <a href="/player/player/points" class="compe"><li>会员积分查询</li></a>
                                <a href="/player/player/info" class="compe"><li>修改个人资料</li></a>
                                <a href="/player/playercoach/index" class="compe"><li>绑定教练</li></a>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingThree">
                        <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                <p>Member Resources</p>
                                <h3>会员资源&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;v</h3>
                            </a>
                        </h4>
                    </div>
                    <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
                        <div class="panel-body">
                            <ul>
                                <a href="/player/player/datasource" class="compe"><li>会员资源</li></a>
                                <a href="/player/player/eventscore" class="compe"><li>评分单</li></a>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
    </div>
    <!--联系我们-->
    <div class="container">
        <div class="row contact">
            <span></span>
            <h2>联系我们<br>GET IN TOUCH</h2>
            <p>全美演讲与辩论联盟中国办公室（NSDA China）欢迎教育、传媒、金融等社会各领域组织机构<br>与我方进行冠名、赞助等多种形式合作，共同推动学术辩论与公共演讲在中国的蓬勃发展。</p>

            <div class="col-sm-4 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <img src="~/asset/img/map-3.svg" alt="">
                        <p>上海市杨浦区淞沪路303号创智天地11号楼501室</p>

                    </div>
                </div>
            </div>
            <div class="col-sm-4 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <img src="~/asset/img/chat-user-2.svg" alt="">
                        <p>021-60452021</p>

                    </div>
                </div>
            </div>
            <div class="col-sm-4 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <img src="~/asset/img/mail-at.svg" alt="">
                        <p>joyofdebate@dipont-edu.com</p>

                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="blank">

    </div>
    <footer>
        <p>Copyright © 2005 - 2018 National Forensic League of China All Reserved</p>
    </footer>

    <script src="/asset/js/jquery.min.js"></script>
    <script src="/asset/js/parallax.min.js"></script>
    <script src="/asset/js/bootstrap.min.js"></script>
    <script src="/asset/js/layer/layer.js"></script>
    <script src="/asset/uploadify/ajaxfileupload.js"></script>
    <script src="/asset/layer/js/layer.js"></script>
    @RenderSection("scripts", false)
    <script>
        //如果账号未认证 就开启定时轮询
        if(@userContext.MemberStatus==1)
        {
            var timer=window.setInterval(polling, 3 * 1000);
            function polling() {
                $.ajax({
                    url: "/player/player/polling",
                    type: "get",
                    dataType: "json",
                    success: function (json) {
                        if (json.flag)
                        {
                            window.clearTimeout(timer);
                        }
                    }
                });
            }
        }
        $(function () {
            $('#uploadFile').change(function () {
                var f = document.getElementById('uploadFile').files[0]
                var src = window.URL.createObjectURL(f);
                document.getElementById('uploadPreview').src = src;

                $.ajaxFileUpload({
                    url: "/commondata/updatehead",
                    secureuri: false,
                    fileElementId: 'uploadFile',
                    dataType: 'json',
                    success: function (data) {
                        if (data.flag) {
                            location.reload();
                        }
                        else {
                            layermsg(data.msg, 1);
                        }
                    }
                });
            });
        });

        $("#goauth").click(function(){
            $.ajax({
                url: "/player/player/polling",
                type: "get",
                dataType: "json",
                success: function (json) {
                    if(json.flag)
                    {
                        window.location.href = "/player/playerpay/alipay" + json.data;
                    }else{
                        layer.msg(json.msg, { icon: 5, time: 1000 });
                    }
                }
            });
        });
    </script>
</body>
</html>
