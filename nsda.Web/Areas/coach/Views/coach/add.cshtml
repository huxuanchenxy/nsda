@using nsda.Utilities
@{
    Layout = "";
}
<html>
<head>
    <link rel="stylesheet" href="/asset/css/coachboundplayer.css?version=@Constant.Version">
</head>
<body>
    <div class="addcoach" id="addeducation">
        <img class="coachimg" src="/asset/img/bound_03.png" alt="...">
        <div class="form-group">
            <input class="form-select-school" id="startdate">
            <em class="em">—</em>
            <input class="form-select-school" id="enddate">
            <select class="form-select-schools" id="player">
                <option value="completename">Students Name</option>
                <option value="code">NSDA Code</option>
            </select>
            <input id="txtPlayerValue" value="" data-id="0" />
            <a class="searchcoach" id="search">搜索&nbsp;<i class="iconfont icon-sousuo1"></i></a>
            <select id="sel" size="2" style="display:none;"></select>
            <a href="javascript:;" class="boundcoach" id="confirmadd">绑定学生</a>
        </div>
    </div>
    <script src="/asset/js/jquery-3.2.1.min.js"></script>
    <script src="/asset/js/laydate/laydate.js"></script>
    <script src="/asset/layer/js/layer.js"></script>
    <script>
        laydate.render({
            elem: '#startdate',
            type: 'month'
        });
        laydate.render({
            elem: '#enddate',
            type: 'month'
        });

       $("#confirmadd").click(function () {
                var $startdate = $("#startdate").val();
                if ($startdate == null) {
                    layer.msg('请输入起始年月', { icon: 5, time: 1000 });
                    return;
                }
                var $enddate = $("#enddate").val();
                var $playerId = $("#txtPlayerValue").attr("data-id");
                if ($playerId == null || $playerId == 0) {
                    layer.msg('请选择学生', { icon: 5, time: 1000 });
                    return;
                }
                $.ajax({
                    url: "/coach/coach/insertplayer",
                    type: "post",
                    dataType: "json",
                    data: {
                        StartDate: $startdate,
                        EndDate: $enddate,
                        ObjMemberId: $playerId
                    },
                    beforeSend: function () {
                        layer.msg('绑定学生中...', { shade: [0.5, '#f5f5f5'], scrollbar: false, time: 10000 });
                    },
                    success: function (json) {
                        layer.closeAll();
                        if (json.flag) {
                            parent.layer.closeAll();
                        }
                        else {
                            layer.msg(json.msg, { icon: 5, time: 1000 });
                        }
                    }
                  , error: function () {
                      layer.closeAll();
                  }
                });
       });

       $("#search").click(function () {
           $.ajax({
               url: "/coach/coach/listplayer",
               type: "get",
               dataType: "json",
               data: {
                   key: $("#player").val(),
                   value: $("#txtPlayerValue").val()
               },
               success: function (json) {
                   var html = '';
                   if (json.data != null && json.data.length > 0) {
                       $.each(json.data, function (k, val) {
                           html += '<option value=' + val.MemberId + '>' + val.MemberName + '</option>';
                       });
                       $("#sel").html(html);
                       $("#sel").show();
                   }
               }
           });

       });

       $("#sel").change(function () {
           var options = $("#sel option:selected");
           $("#txtPlayerValue").val(options.text());
           $("#txtPlayerValue").attr("data-id", options.val());
           $(this).hide();
      });

    </script>
</body>
</html>