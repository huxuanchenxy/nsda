@using nsda.Utilities
@using nsda.Model.dto.response
@model EventResponse
@{
    Layout = "~/Areas/eventmanage/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "成绩录入";
    var eventGroup = ViewBag.EventGroup as List<EventGroupResponse>;
}
@section styles
{
    <link rel="stylesheet" href="/asset/css/eventmanageplayer.css?version=@Constant.Version">
    <link href="/asset/css/doublecheck.css?version=@Constant.Version" rel="stylesheet" type="text/css" />
    <link href="/asset/css/writegrades.css?version=@Constant.Version" rel="stylesheet" type="text/css" />
}
@Html.Partial("_left")
<div class="event-lists ">
    <input type="hidden" id="eventId" value="@Model.Id"/>
    <input type="hidden" id="eventGroupId" value="@ViewBag.EventGroupId"/>
    <div class="list-top">
        @foreach (var item in eventGroup)
        {
            if (item.Id == ViewBag.EventGroupId)
            {
                <a href="/eventmanage/eventmanage/resultinput?eventId=@item.EventId&eventGroupId=@item.Id" class="active list">@item.Name</a>
            }
            else
            {
                <a href="/eventmanage/eventmanage/resultinput?eventId=@item.EventId&eventGroupId=@item.Id" class="list">@item.Name</a>
            }
        }
    </div>
    <div class="event-con">
        <div>
            <img src="/asset/img/vs_03.png" />
            <h4>第一轮 评分单录入 </h4>
            <button class="pre blue posright"><i class="iconfont icon-plus-preview"></i><p>预览对垒表</p></button>
        </div>
        <div>
            <button class="check poscen lightgreen"><i class="iconfont icon-duihao1"></i><p>Double Check 审核通过</p></button>
            <button class="pre green posright"><i class="iconfont icon-dayin"></i><p>打印标签纸</p></button>
            <button class="pre orange posright"><i class="iconfont icon-dayin"></i><p>打印评分单</p></button>
        </div>
        <div class="set">
            <input id="txt" type="text" placeholder="输入NSDA会员编号/会员姓名" />
            <a href="javascript:;" id="search" class="search">搜索</a>
            <button class="check lightorange"><i class="iconfont icon-duihao1"></i><p>查看还未递交评分单的对垒</p></button>
        </div>
        <div class="constep">
            <div class="paper">
                <div><p class="flight">Flight A</p><p class="ftime">Start 9:25</p></div>
                <div><h3>裁判：</h3><p class="jnumber">J325691234567890</p><p class="name">Nicolas</p><h3 class="room">Room：</h3><p class="roomnum">A201</p></div>
                <table class="pro">
                    <thead>
                        <tr>
                            <th colspan="3">PRO.</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="3">队伍编号： 026<span><i class="iconfont icon-exchangejiaohuan"></i></span></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>Points</td>
                            <td>Rank</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td colspan="3" role="button" class="rolebutton click"></td>
                        </tr>
                    </tbody>
                </table>
                <table class="con">
                    <thead>
                        <tr>
                            <th colspan="3">CON.</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="3">队伍编号： 651</td>
                        </tr>
                        <tr>
                            <td>asdfghj</td>
                            <td>Points</td>
                            <td>Rank</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td colspan="3" role="button" class="rolebutton"></td>
                        </tr>
                    </tbody>
                </table>
                <label class="radio-inline">
                    <input type="radio" name="winType"  value="1">Double Bye 双赢
                </label>
                <label class="radio-inline">
                    <input type="radio" name="winType"  value="3">Aff Bye Neg Forfeit 反方弃权
                </label>
                <label class="radio-inline">
                    <input type="radio" name="winType"  value="2">Double Forfeit or Loss 双输
                </label>
                <label class="radio-inline">
                    <input type="radio" name="winType"  value="4">Aff Forfeit Neg Bye 正方弃权
                </label>
                <button class="refer resultinput">提交评分单</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        //搜索
        $("#search").click(function () {
            var data = $("#txt").val();
            if (data == "" || data == null) {
                return;
            }
            $.ajax({
                url: "",
                type: "get",
                dataType: "json",
                data: {
                    eventId: $("#eventId").val(),
                    eventGroupId: $("#eventGroupId").val(),
                    txtValue: data
                },
                success: function (json) {
                    if (json.flag && json.data != null && json.data.length > 0) {
                        var html = '';
                        $.each(json.data, function (k, val) {

                        });
                        $("#data").html(html)
                    } else {
                        $("#data").html('');
                    }
                }
            });
        });

        //成绩录入
        $(document).on("click", ".resultinput", function () {
           
        });
        
        //替换位置
        $(document).on("click", ".replace", function () {

        });
    </script>
}
