                        </li>
                    </ul>
                </div>
            </div>

        }
        <button class="confirmset" style="margin-top:10px;" id="save">确认保存淘汰赛设置</button>
    </div>
</div>
@section scripts
{
    <script>        
        $("#save").click(function () {
            alert("调用了方法");
            return;
            var data = [];
            data.push("");
            $.ajax({
                url: "/eventmanage/eventmanage/knockoutsettings",
                type: "post",
                dataType: "json",
                data: {
                    request: data
                },
                beforeSend: function () {
                    layer.msg('操作中...', { shade: [0.5, '#f5f5f5'], scrollbar: false, time: 10000 });
                },
                success: function (json) {
                    layer.closeAll();
                    if (json.flag) {
                        layer.msg("设置成功", { icon: 1, time: 1000 });
                    }
                    else {
                        layer.msg(json.msg, { icon: 5, time: 1000 });
                    }
                }
             ,error: function () {
                 layer.closeAll();
             }
            });
        });

        $(".confirm").click(function () {
            var teamNum = $("#teamnum_" + $(this).attr("data-id")).val();
            if (teamNum == null || teamNum == "")
            {
                layer.msg('请输入晋级队伍数', { icon: 5, time: 1000 });
                return;
            }
            if (parseInt(teamNum) <= 0 || parseInt(teamNum) > 64) {
                layer.msg('晋级队伍数有误', { icon: 5, time: 1000 });
                return;
            }
        });
    </script>
}
