@using nsda.Utilities
@{
    ViewBag.Title = "裁判登录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles
{  
 <link rel="stylesheet" href="/asset/css/about.css?version=@Constant.Version">
 <link rel="stylesheet" href="/asset/css/judgelogin.css?version=@Constant.Version">
}
<div class="ad">

</div>

<!--面包屑导航-->
<div class="rode">

</div>

<div class="container log-con">
    <div class="login">
        <h3>NSDA Judge Login</h3>
        <p>注册邮箱 Email</p>
        <img src="/asset/img/member.svg" alt="Alternate Text" />
        <input type="text" name="name" value="" id="refereeemail"/>
        <p>登录密码 Password <a href="javascript:;">忘记密码 Forgot?</a></p>
        <img src="/asset/img/password.svg" alt="Alternate Text" />
        <input type="password" name="name" value="" id="refereepwd"/>
        <a href="javascript:;" id="login" class="button">登录 Sign In</a>
        <p>Not a judge member? <a href="/register/referee" class="reg-a">Sign up now</a></p>
    </div>

</div>
@section scripts
{
    <script>
        $("#login").click(function () {
            var $refereeemail = $("#refereeemail");
            var $refereepwd = $("#refereepwd");
            if (validate.isNull($refereeemail.val())) {
                layer.msg('请输入您的邮箱', { icon: 5, time: 1000 });
                return;
            }
            if (!validate.isEmail($refereeemail.val())) {
                layer.msg('邮箱格式有误', { icon: 5, time: 1000 });
                return;
            }
            if (validate.isNull($refereepwd.val())) {
                layer.msg('请输入您的密码', { icon: 5, time: 1000 });
                return;
            }
            $.ajax({
                url: "/login/login",
                type: "post",
                dataType: "json",
                data: {
                    Account: $refereeemail.val(),
                    Pwd: $refereepwd.val(),
                    MemberType: 3
                },
                beforeSend: function () {
                    layer.msg('登录中...', { shade: [0.5, '#f5f5f5'], scrollbar: false, time: 10000 });
                },
                success: function (json) {
                    layer.closeAll();
                    if (json.flag) {
                        location.href = json.msg;
                    }
                    else {
                        layer.msg(json.msg, { icon: 5, time: 1000 });
                    }
                }
                , error: function () {
                    layer.closeAll();
                }
            });
        });
    </script>
}